{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Training Application API",
        "description": "Swagger API Training Application",
        "license": {
            "name": "Training",
            "url": ""
        }
    },
    "host": "node-js-training-api.herokuapp.com",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/AuthRegisterModel"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/AuthRegisterResponseModel"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Authorization user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "The user we want to authorize",
                        "schema": {
                            "$ref": "#/definitions/AuthLoginModel"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User is authorized",
                        "schema": {
                            "$ref": "#/definitions/AuthLoginResponseModel"
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user by token",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is found",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "AuthRegisterModel": {
            "required": [
                "login",
                "email",
                "password",
                "type",
                "city",
                "classification"
            ],
            "properties": {
                "login": {
                    "type": "string",
                    "uniqueItems": true
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                },
                "type": {
                    "type": "number"
                },
                "city": {
                    "type": "string"
                },
                "classification": {
                    "type": "number"
                }
            }
        },
        "AuthLoginModel": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "AuthRegisterResponseModel": {
            "properties": {
                "data": {
                    "type": "boolean"
                }
            }
        },
        "AuthLoginResponseModel": {
            "properties": {
                "token": {
                    "type": "string"
                },
                "user": {
                    "type": "object",
                    "$ref": "#/definitions/UserModel"
                }
            }
        },
        "UserModel": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "photo": {
                    "type": "string"
                },
                "login": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "type": {
                    "type": "number"
                },
                "city": {
                    "type": "string"
                },
                "coins": {
                    "type": "number"
                },
                "classification": {
                    "type": "number"
                },
                "isAdmin": {
                    "type": "boolean"
                },
                "confirmed": {
                    "type": "boolean"
                }
            }
        }
    }
}