{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Training Application API",
        "description": "Swagger API Training Application",
        "license": {
            "name": "Training",
            "url": ""
        }
    },
    "host": "node-js-training-api.herokuapp.com",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/registration": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/AuthRegisterModel"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Check email and confirm account by url",
                        "schema": {
                            "$ref": "#/definitions/AuthRegisterResponseModel"
                        }
                    }
                }
            }
        },
        "/auth/email-confirm": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Confirm account",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Token confirm account",
                        "schema": {
                            "$ref": "#/definitions/AuthRegisterModel"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Open web site window"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Authorization user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "The user we want to authorize",
                        "schema": {
                            "$ref": "#/definitions/AuthLoginModel"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User is authorized",
                        "schema": {
                            "$ref": "#/definitions/AuthLoginResponseModel"
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user by token",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is found",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        },
        "/user/get-friends": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get friends",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Users array",
                        "schema": {
                            "properties": {
                                "type": "array"
                            }
                        }
                    }
                }
            }
        },
        "/user/upload-profile-image": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Upload user photo",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    },
                    {
                        "name": "image",
                        "type": "file",
                        "in": "formData",
                        "description": "PNG or JPEG file to upload"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Photo is uploaded",
                        "schema": {
                            "$ref": "#/definitions/UserModel"
                        }
                    }
                }
            }
        },
        "/user/add-to-friends-list": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Add user to friends",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    },
                    {
                        "name": "invitationHashCode",
                        "in": "body",
                        "description": "Invitation Hash Code unique for each user",
                        "schema": {
                            "properties": {
                                "invitationHashCode": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User added as a friend",
                        "schema": {
                            "properties": {
                                "login": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "Get posts",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "All posts",
                        "schema": {
                            "$ref": "#/definitions/ResponseCreatePostModel"
                        }
                    }
                }
            }
        },
        "/post/create": {
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "Create new post",
                "parameters": [
                    {
                        "name": "x-access-token",
                        "in": "header",
                        "description": "Auth access token"
                    },
                    {
                        "name": "Body",
                        "in": "body",
                        "description": "",
                        "schema": {
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "object",
                                    "properties": {
                                        "latitude": {
                                            "type": "number"
                                        },
                                        "longitude": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Post added",
                        "schema": {
                            "$ref": "#/definitions/ResponseCreatePostModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "AuthRegisterModel": {
            "required": [
                "login",
                "email",
                "password",
                "type",
                "city",
                "classification"
            ],
            "properties": {
                "login": {
                    "type": "string",
                    "uniqueItems": true
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                },
                "type": {
                    "type": "number"
                },
                "city": {
                    "type": "string"
                },
                "classification": {
                    "type": "number"
                }
            }
        },
        "AuthLoginModel": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "AuthRegisterResponseModel": {
            "properties": {
                "data": {
                    "type": "boolean"
                }
            }
        },
        "AuthLoginResponseModel": {
            "properties": {
                "token": {
                    "type": "string"
                },
                "user": {
                    "type": "object",
                    "$ref": "#/definitions/UserModel"
                }
            }
        },
        "UserModel": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "photo": {
                    "type": "string"
                },
                "login": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "type": {
                    "type": "number"
                },
                "city": {
                    "type": "string"
                },
                "coins": {
                    "type": "number"
                },
                "classification": {
                    "type": "number"
                },
                "isAdmin": {
                    "type": "boolean"
                },
                "confirmed": {
                    "type": "boolean"
                }
            }
        },
        "ResponseCreatePostModel": {
            "properties": {
                "_id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "location": {
                    "type": "object",
                    "properties": {
                        "latitude": {
                            "type": "number"
                        },
                        "longitude": {
                            "type": "number"
                        }
                    }
                },
                "author": {
                    "type": "string"
                }
            }
        }
    }
}